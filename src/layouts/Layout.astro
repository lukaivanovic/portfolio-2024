---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Software designer portfolio." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Software designer portfolio." />
    <meta property="og:image" content="https://ivanovicluka.co/og-image.png" />
    <meta property="og:url" content="https://lukaivanovic.co" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@lukaivnvc" />
    <meta name="twitter:title" content="Luka Ivanovic © 2024" />
    <meta name="twitter:description" content="Software designer" />
    <meta
      name="twitter:image"
      content="https://ivanovicluka.co/twitter-image.png"
    />
    <title>Luka Ivanovic © 2024</title>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
<style is:global lang="scss">
  @font-face {
    font-family: "TWK Lausanne - 450";
    src: url("/fonts/TWKLausanne-450.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "TWK Lausanne - 400";
    src:
      url("/fonts/TWKLausanne-350.otf") format("opentype"),
      url("/fonts/TWKLausanne-350.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --color-bg: #ffffff;
    --color-primary: #000000;
    --color-secondary: #1d1d1d;
    --color-tertiary: #666666;
    --color-border: #e5e5e5;
    --color-accent: #000;
  }

  .dark-mode {
    --color-bg: #212121;
    --color-primary: #ffffff;
    --color-secondary: #d9d9d9;
    --color-tertiary: #a9a9a9;
    --color-border: #3b3b3b;
    --color-accent: #000;
  }

  body {
    font-family: "TWK Lausanne - 450", sans-serif;
    font-size: 14px;
    transition:
      background-color 0.5s ease,
      color 0.5s ease;
    background-color: var(--color-bg);
    color: var(--color-text);
  }

  .container {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 32px;
    padding-right: 32px;

    &.-wide {
      padding-left: 16px;
      padding-right: 16px;
    }
  }

  h1 {
    font-size: 32px;
    line-height: 40px;
  }

  h2 {
    font-size: 28px;
    line-height: 58px;
  }

  .text-light {
    font-family: "TWK Lausanne - 400", sans-serif;
  }

  p {
    font-family: "TWK Lausanne - 400", sans-serif;
    font-size: 14px;
    line-height: 26px;
  }

  a {
    &:hover {
      color: var(--color-primary);
      text-decoration: underline;
    }
  }

  * {
    transition:
      background-color 0.5s ease,
      border-color 0.5s ease,
      outline-color 0.5s ease,
      stroke 0.5s ease;
  }

  @media (max-width: 1024px) {
    .container {
      padding-left: 16px;
      padding-right: 16px;

      &.-wide {
        padding-left: 16px;
        padding-right: 16px;
      }
    }

    h1 {
      font-size: 26px;
      line-height: 34px;
    }

    p {
      font-size: 15px;
      line-height: 26px;

      color: var(--color-secondary);
    }
  }
</style>
