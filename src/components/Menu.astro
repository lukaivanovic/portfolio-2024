---
// Get the current path to determine which menu item is active
const { pathname } = Astro.url;
---

<nav class="menu-container">
  <div class="menu">
    <a href="/" class={pathname === "/" ? "active" : ""}>Home</a>
    <a href="/work" class={pathname === "/work" ? "active" : ""}>Work</a>
    <a href="/contact" class={pathname === "/contact" ? "active" : ""}
      >Contact</a
    >
  </div>
</nav>

<style>
  .menu-container {
    display: flex;
    position: fixed;
    bottom: 1rem;
    left: 0;
    right: 0;
    justify-content: center;
    padding: 0;
    z-index: 100;
  }

  .menu {
    display: flex;
    background-color: #000;
    border-radius: 2rem;
    padding: 0.25rem;
    gap: 0.25rem;
  }

  .menu a {
    color: #fff;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 1.5rem;
    transition: background-color 0.3s ease;
  }

  .menu a:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .menu a.active {
    background-color: #333;
  }
</style>
