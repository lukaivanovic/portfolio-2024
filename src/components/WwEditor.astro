---
import { Image } from "astro:assets";
import wwEditorMain from "../images/test2.jpg";
import wwEditorWorkflow from "../images/workflow.png";
import wwEditorFormula from "../images/formula.png";
import wwEditorDesignSystem from "../images/ww-editor-design-system.png";
import numeral from "../svg/numeral-one.svg?raw";
import ProjectHeader from "./ProjectHeader.astro";
---

<section class="py-[240px]">
  <ProjectHeader
    name="WeWeb Editor"
    duration="2022 - PRESENT"
    description="The editor features many complex and intertwining systems such as components, workflows and more. We take web best practices and present them in an elevated and clear interface. As a result, editor can export clean and modern code."
    numeralSvg={numeral}
  />

  <!-- Editor Image -->
  <div class="container -wide">
    <div
      class="p-6 flex justify-center items-center rounded-sm overflow-hidden"
    >
      <Image
        class="drop-shadow-2xl w-full border border-neutral-200"
        src={wwEditorMain}
        alt=""
      />
    </div>
  </div>

  <!-- Workflow Editor -->
  <div class="container -wide py-[180px]">
    <div class="w-full flex flex-col">
      <div>
        <div class="grid grid-cols-8 gap-4 w-full">
          <Image
            src={wwEditorWorkflow}
            alt=""
            quality={100}
            class="col-span-5 bg-neutral-300 rounded-sm border border-neutral-400 overflow-hidden"
          />

          <Image
            src={wwEditorFormula}
            alt=""
            quality={100}
            class="col-span-3 bg-neutral-300 rounded-sm border border-neutral-400 overflow-hidden"
          />
        </div>

        <div class="grid grid-cols-8 gap-6 w-full mt-4">
          <div class="max-w-[640px] col-span-5 text-md">
            What functions are in code, workflows are in weweb. Use pre-made
            actions like navigating to a page, changing a variable value or
            simply write JavaScript.
          </div>

          <div class="max-w-[560px] col-span-3 text-md">
            What functions are in code, workflows are in weweb. Use pre-made
            actions like navigating to a page, changing a variable value or
            simply write JavaScript.
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Design system -->
  <div class="container -wide pt-[80px]">
    <div class="w-full flex flex-col items-end">
      <div class="max-w-[1094px] w-full">
        <div class="max-w-[560px] flex flex-col justify-between pb-8">
          <h3 class="text-lg mb-2">Design System</h3>
          <p>
            What functions are in code, workflows are in weweb. Use pre-made
            actions like navigating to a page, changing a variable value or
            simply write JavaScript.
          </p>
        </div>

        <Image
          src={wwEditorDesignSystem}
          alt=""
          quality={100}
          width="2048"
          height="1472"
          class="w-full h-auto object-cover object-left-top bg-[#1a1a1a]"
        />
      </div>
    </div>
  </div>
</section>
