---
import { Image } from "astro:assets";
import twitterSteve from "../images/twitter-steve.jpg";
import twitterRobert from "../images/twitter-robert.jpg";
import twitterAndy from "../images/twitter-andy.jpeg";

interface Props {
  comment: string;
  handle: string;
}

const twitterImages = {
  stevedesignerd: twitterSteve,
  andystrb: twitterAndy,
  RLooplabs: twitterRobert,
};

const { comment, handle } = Astro.props;
---

<div
  class="bg-[var(--color-bg)] flex flex-col justify-between px-4 py-4 border border-[var(--color-border)] rounded-md drop-shadow-sm"
>
  <p class="mb-2 text-[var(--color-primary)]">
    {comment}
  </p>

  <div class="flex flex-row gap-2 items-center">
    <Image
      src={twitterImages[handle]}
      alt=""
      class="w-6 h-6 rounded-full outline outline-1 outline-[var(--color-border)] outline-offset-2"
    />
    <span class="text-[var(--color-tertiary)] text-sm">@{handle}</span>
  </div>
</div>
