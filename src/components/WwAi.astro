---
import ProjectHeader from "./ProjectHeader.astro";
import AiToggle from "./ww/AiToggle.vue";
import WwChat from "./ww/WwChat.vue";
import { Image } from "astro:assets";
import background from "../images/bg2.png";
import WwAiContext from "./ww/WwAiContext.vue";
---

<section>
  <div class="container">
    <div class="inner-container pb-[200px]">
      <div class="h-[80px]"></div>
      <ProjectHeader
        name="Designing AI that can build web applications"
        showBadge={true}
        description="WeWeb AI is a new way to build applications with AI."
        accentColor="#341D65"
      />

      <div class="h-[80px]"></div>

      <div class="grid lg:grid-cols-5 grid-cols-1 gap-4">
        <div class="col-span-2 h-full flex flex-col gap-4">
          <div class="flex gap-4 flex-grow">
            <a
              href="https://x.com/lukaivnvc/status/1866056100409417827"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-[#341D65] rounded-md flex-grow text-white hover:text-white/80 hover:bg-[#7A4895] hover:no-underline p-4 flex flex-col justify-between basis-0"
              aria-label="View Twitter post about building a Twitter clone with WeWeb AI"
            >
              <svg
                class="text-[#FF98F1]"
                width="16"
                height="16"
                viewBox="0 0 1200 1227"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
                  fill="currentColor"></path>
              </svg>

              <div>
                <div class="text-sm opacity-50">@lukaivnvc</div>
                <div class="text-sm">
                  Building a Twitter clone with @weweb_io AI in about 5 minutes
                </div>
              </div>
            </a>

            <div
              class="bg-[#341D65] flex items-center justify-center rounded-md flex-grow basis-0"
            >
              <div
                class="w-full h-full flex items-end justify-center hover:scale-105 will-change-transform transition-all duration-300"
              >
                <AiToggle class="z-10" client:only="vue" />
              </div>
            </div>
          </div>

          <div
            class="bg-[#341D65] rounded-md overflow-hidden pb-6 aspect-[8/8]"
          >
            <div
              class="w-full h-full flex items-end justify-center hover:scale-105 will-change-transform transition-all duration-300"
            >
              <WwAiContext client:only="vue" class="z-10" />
            </div>
          </div>
        </div>

        <div
          class="bg-[#341D65] relative rounded-md md:col-span-3 col-span-1 flex items-start justify-center overflow-hidden p-6 aspect-[8/8]"
        >
          <Image
            src={background}
            class="absolute top-0 left-0 w-full h-full object-cover z-0"
            alt=""
            quality={100}
          />

          <WwChat client:only="vue" class="z-10" />
        </div>
      </div>
    </div>
  </div>
</section>
