---
import numeral from "../svg/numeral-three.svg?raw";
import ProjectHeader from "./ProjectHeader.astro";
import AiToggle from "./ww/AiToggle.vue";
import WwChat from "./ww/WwChat.vue";
---

<section class="py-[80px]">
  <div class="container -wide">
    <div class="border border-neutral-400">
      <ProjectHeader
        name="WeWeb AI"
        duration="Winter 2024 - Coming soon"
        description=""
        numeralSvg={numeral}
        accentColor="#274076"
      />

      <div class="grid grid-cols-2 gap-4 p-6">
        <div
          class="bg-[url('bg.jpg')] bg-repeat border border-neutral-200 rounded-md row-span-3 col-span-2 flex items-start justify-center h-[640px] pt-8 overflow-hidden"
        >
          <WwChat client:only="vue" />
        </div>
        <div
          class="bg-white border border-neutral-200 flex items-center justify-center rounded-md h-[400px]"
        >
          <AiToggle
            class="scale-150 translate-z-0 backface-hidden subpixel-antialiased"
            client:only="vue"
          />
        </div>
        <div
          class="bg-white border border-neutral-200 flex items-center justify-center rounded-md row-span-2 h-[400px]"
        >
        </div>
      </div>
    </div>
  </div>
</section>
