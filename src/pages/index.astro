---
import Layout from "../layouts/Layout.astro";
import Illustration from "../components/Illustration.astro";
import WwComponents from "../components/WwComponents.astro";
import WwEditor from "../components/WwEditor.astro";
import WwAi from "../components/WwAi.astro";
import logo1 from "../svg/logo-1.svg?raw";
import logo2 from "../svg/logo-2.svg?raw";
import logo3 from "../svg/logo-3.svg?raw";
import circle from "../svg/circle2.svg?raw";
import Menu from "../components/Menu.astro";
---

<Layout title="Welcome to Astro.">
  <Menu />

  <!-- Hero -->
  <section id="hero">
    <div class="container flex flex-col w-full">
      <h1 class="mb-6 mt-4 max-w-[600px]">Software designer and developer</h1>
      <p>
        Currently at <a href="https://weweb.io">WeWeb</a> on enabling anyone to build
        applications through a visual interface.
      </p>
    </div>
  </section>

  <WwEditor />

  <div class="dark-mode-section">
    <WwComponents />

    <WwAi />

    <section class="overflow-hidden">
      <div
        class="container h-[500px] flex flex-col justify-end items-center py-8 relative"
      >
        <div
          class="absolute bottom-0 left-[50%] translate-y-[50%] translate-x-[-50%] lg:w-[400px] lg:h-[400px] w-[200px] h-[200px]"
        >
          <Fragment set:html={circle} />
        </div>
        <span class="text-[var(--color-secondary)] z-40"
          >Luka Ivanović © 2024</span
        >
      </div>
    </section>
  </div>

